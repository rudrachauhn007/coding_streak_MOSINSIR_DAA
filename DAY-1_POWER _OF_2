// shree ganeshaya namaha:|
// shree chamudamataya namaha:|
// shree saraswatimataya namaha:|
class Solution {
public:
    bool isPowerOfTwo(int n) {
        int cnt=0;
        for (int i=0;i<33;i++)
        {
            long long check = (1LL<<i);
            if (check & n)
            {
                cnt++;
            }
        }
        if (cnt==1) return true;
        return false;


        
    }
};
